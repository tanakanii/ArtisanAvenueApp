<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AddProduct">

  <EditText
      android:id="@+id/textProductDescription"
      android:layout_width="364dp"
      android:layout_height="134dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="8dp"
      android:layout_marginRight="20dp"
      android:background="#888888"
      android:backgroundTint="#E2E2E2"
      android:ems="10"
      android:fontFamily="@font/montserrat"
      android:gravity="start"
      android:hint="Enter description"
      android:inputType="text"
      android:paddingStart="10sp"
      android:paddingEnd="10sp"
      android:textColor="#000000"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.489"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView22" />

  <TextView
      android:id="@+id/textView22"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:fontFamily="@font/montserrat_bold"
      android:text="BLOG DESCRIPTION"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteY="325dp" />

  <TextView
      android:id="@+id/textCategory2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:fontFamily="@font/montserrat_bold"
      android:text="BLOG LINK"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteY="511dp" />

  <FrameLayout
      android:id="@+id/layoutImage"
      android:layout_width="409dp"
      android:layout_height="165dp"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
      tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="409dp"
        android:layout_height="133dp"
        android:layout_gravity="center|top"
        android:background="#C2C2C2"
        android:scaleType="centerInside"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/lblAddImage"
        android:layout_width="409dp"
        android:layout_height="34dp"
        android:layout_gravity="bottom|center"
        android:background="#494551"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Tap to change"
        android:textColor="#F6F6F6"
        android:textSize="10sp" />
  </FrameLayout>

  <EditText
      android:id="@+id/textProductName"
      android:layout_width="0dp"
      android:layout_height="46dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="8dp"
      android:layout_marginRight="20dp"
      android:background="#939393"
      android:backgroundTint="#E2E2E2"
      android:ems="10"
      android:fontFamily="@font/montserrat"
      android:hint="Enter product name"
      android:inputType="text"
      android:paddingStart="10sp"
      android:paddingEnd="10sp"
      android:text="The Art of Weaving"
      android:textColor="#000000"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView20" />

  <EditText
      android:id="@+id/textProductName2"
      android:layout_width="362dp"
      android:layout_height="50dp"
      android:layout_marginTop="8dp"
      android:background="#939393"
      android:backgroundTint="#E2E2E2"
      android:ems="10"
      android:fontFamily="@font/montserrat"
      android:hint="Enter your link here"
      android:inputType="text"
      android:paddingStart="10sp"
      android:paddingEnd="10sp"
      android:textColor="#000000"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textCategory2" />

  <View
      android:id="@+id/linearLayout2"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/top_nav"
      android:gravity="end|center_vertical"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/imageBack"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_back"
      app:tint="@color/black" />

  <TextView
      android:id="@+id/textView20"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/montserrat_bold"
      android:text="BLOG TITLE"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/layoutImage" />

  <ImageButton
      android:id="@+id/addProdBtn"
      android:layout_width="135dp"
      android:layout_height="51dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="24dp"
      android:backgroundTint="#FFFFFF"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:srcCompat="@drawable/addblogbtn" />

  <ProgressBar
      android:id="@+id/progressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="79dp"
      android:layout_height="28dp"
      android:layout_gravity="center"
      android:layout_marginEnd="28dp"
      android:layout_marginBottom="12dp"
      android:background="#FFFFFF"
      android:backgroundTint="#FFFFFF"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="@+id/addProdBtn"
      app:layout_constraintEnd_toEndOf="@+id/addProdBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>