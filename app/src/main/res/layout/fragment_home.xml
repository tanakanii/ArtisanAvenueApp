<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/top_nav"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/searchbox_home"
                android:layout_width="13dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <EditText
                android:id="@+id/search_box_home"
                android:layout_width="260dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/search_btn"
                android:ems="10"
                android:hint="Search"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />

            <ImageView
                android:id="@+id/none"
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="27dp"
            app:cardElevation="20dp">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/custom_button_color"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="20"
                app:iss_delay="1000"
                app:iss_period="1500" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/categories_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="20dp"
            android:text="CATEGORIES"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <HorizontalScrollView
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/baskets_categorybtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/baskets" />


                <ImageButton
                    android:id="@+id/glassart_categorybtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/glass_art" />

                <ImageButton
                    android:id="@+id/woodcarving_categorybtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/wood_carving_cat" />

                <ImageButton
                    android:id="@+id/ceramics_categorybtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ceramics_cat" />

                <ImageButton
                    android:id="@+id/furniture_categorybtn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/furniture_cat" />

                <ImageButton
                    android:id="@+id/jewelry_categorybtn"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/jewelry_cat" />


            </LinearLayout>


        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/new_arrivals" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/featured" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="333dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/trending_now" />

        </LinearLayout>

        <TextView
            android:id="@+id/justforyou_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="JUST FOR YOU"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/product1_home"
                android:layout_width="105dp"
                android:layout_height="146dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/product1_home" />

            <ImageButton
                android:id="@+id/product2_home"
                android:layout_width="105dp"
                android:layout_height="146dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/product2_home" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="105dp"
                android:layout_height="146dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/product3_home" />
        </LinearLayout>


        <!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1">-->


<!--        </RelativeLayout>-->


        <!--        <androidx.constraintlayout.widget.ConstraintLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->

<!--        </androidx.constraintlayout.widget.ConstraintLayout>-->

    </LinearLayout>
</ScrollView>