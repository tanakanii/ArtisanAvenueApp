<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/top_nav"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="13dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <EditText
                android:id="@+id/search_box_artisans"
                android:layout_width="260dp"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/search_btn"
                android:ems="10"
                android:hint="Search"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />

            <ImageButton
                android:id="@+id/notification_btn_artisans"
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/notification_btn" />

            <ImageButton
                android:id="@+id/addtocart_btn_artisans"
                android:layout_width="45dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/addtocart_btn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="85dp"
            android:background="@drawable/artisan_background_image"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/questrial"
                android:text="CAMARINES NORTE HANDICRAFTS"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressBar3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="@id/viewProduct"
                app:layout_constraintEnd_toEndOf="@id/viewProduct"
                app:layout_constraintStart_toStartOf="@id/viewProduct"
                app:layout_constraintTop_toTopOf="@id/viewProduct" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProducts"
                android:layout_width="367dp"
                android:layout_height="400dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.427" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>